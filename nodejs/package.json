{
  "name": "nodejs-harness-ci-demo",
  "version": "1.0.0",
  "description": "A basic Node.js application to test Harness CI pipeline",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "test": "jest --ci --reporters=default --reporters=jest-junit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --ci --reporters=default --reporters=jest-junit",
    "build": "echo 'No build step required for this demo'"
  },
  "keywords": [
    "harness",
    "ci",
    "nodejs",
    "demo"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "jest-junit": {
    "outputDirectory": ".",
    "outputName": "junit.xml"
  }
}

